#!/usr/bin/env bash

cd {{deploy_app_dir}}

echo "Stopping service"
kill -9 `cat save_pid.txt`

echo "Unzipping...."

tar -xzvf app.tar.gz

echo "Starting the service....  "

nohup java -jar  -Dspring.config.location=file:application.yml demo-0.0.1-SNAPSHOT.jar > application.log 2>&1 &

echo $! > save_pid.txt


echo "Service started.."
